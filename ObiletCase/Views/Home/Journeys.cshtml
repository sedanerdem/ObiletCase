@{
    ViewBag.Title = "Journeys";
    var journeys = ViewData["Journeys"] as List<ObiletCase.Models.Request.JourneyDataModel>;
    var journey = journeys.FirstOrDefault();
}

<div class="container mt-4">
    <div class="bg-primary text-white p-3 rounded-top d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@journey.Journey.Origin - @journey.Journey.Destination</h5>
        <small>@journey.Journey.Departure.ToString("dd MMMM dddd", new System.Globalization.CultureInfo("tr-TR"))</small>
    </div>

    @foreach (var item in journeys)
    {
        <div class="card journey-card mb-3">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-muted small fw-bold">KALKIŞ → VARIŞ</div>
                    <div class="fw-bold fs-5">
                        @item.Journey.Departure.ToString("HH:mm") → @item.Journey.Arrival.ToString("HH:mm")
                    </div>
                    <div class="small text-secondary">
                        @item.Journey.Departure - @item.Journey.Arrival
                    </div>
                </div>
                <div class="price-tag text-white fw-bold">
                    @item.Journey.InternetPrice.ToString("N2") TL
                </div>
            </div>
        </div>
    }
</div>